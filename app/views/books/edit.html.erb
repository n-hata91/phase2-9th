<div class="col-md-6 col-md-offset-3">
  <h1>Editing Book</h1>
  <%= render 'partial/error_msg', obj: @book %>
  <%= form_with model: @book do |f| %>
  <div class="field row">
  <%= f.label :title, "Title" %>
  <%= f.text_field :title, value: @book.title, class: "col-xs-12 book_title" %>
  </div>
  <div class="field row">
  <%= f.label :body, "Opinion" %>
  <%= f.text_area :body, value: @book.body, class: "col-xs-12 book_body" %>
  </div>
  <div class="actions row">
  <%= f.submit "Update Book", class: "btn btn-primary col-xs-12" %>
  </div>
  <% end %>
  <%= link_to "Show", book_path(params[:id]) %>
  |
  <%= link_to "Back", books_path %>
  </div>
</div>